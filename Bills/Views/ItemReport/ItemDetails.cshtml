@model List<BillItem>
<section id="horizontal-form-layouts">

	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<div class="card-title-wrap bar-success">
						<h4 class="card-title" id="horz-layout-basic"> Item name : @ViewBag.itemData.Name </h4>
					</div>
					<p class="mb-0">This is the basic horizontal form with labels on left and cost estimation form is the default position.</p>
				</div>
				<div class="card-body">
					<div class="px-3">
					 <div class="row">
                         
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="card-title-wrap bar-success">
                                                <h4 class="form-section" style="    line-height: 3rem;    margin-bottom: .5rem;">
                                                      <i class="icon-layers"></i> Items </h4>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="px-3">
                                         <table class="table table-bordered table-striped">
                                                        <thead>
                                                            <tr style="text-align: center;" >
                                                                <th>Bill Number </th>
                                                                <th>Bill date</th>
                                                                <th>Clint Name</th>
                                                                <th>Selling Price</th>
                                                                <th>Quantity</th>
                                                             
                                                              

                                                            </tr>
                                                        </thead>
                                                
                                                        <tbody id="tableItem">
                                                             
                                                                
                                                                  @if (@Model!= null)
                                                                 {
                                                                      @foreach (BillItem item in Model )
                                                                        {
	                                                                        <tr>

		                                                                        <td>@item.bill.Id    </td >
                                                                                <td>@item.bill.BillDate </td >
                                                                                <td>@item.bill.client.Name    </td >
		                                                                        <td>@item.SellingPrice   </td >
                                                                                <td>@item.Quantity   </td >
                                                                                
                                                                            </tr>
                                                              
                                                                        }
                                                                     
                                                                 }
                                                             
                                                           
	                                                       
                                                        </tbody>
                                         
                                                       
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

   </div>



				</div>

			</div>
		</div>
	</div>
</section>