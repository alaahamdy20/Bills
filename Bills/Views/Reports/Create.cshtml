@model List<Bill>



                        <div class="row">
                         
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="card-title-wrap bar-success">
                                               <h4 class="form-section" style="border-bottom: 1px dashed #949090;    line-height: 3rem;    margin-bottom: .5rem;">
                                                        <i class="icon-user"></i> Bills Items </h4>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="px-3">
                                         <table class="table table-bordered table-striped">
                                                        <thead>
                                                            <tr style="text-align: center;" >
                                                                <th> Bill Number</th>
                                                                <th>Bill date</th>
                                                                <th>Clint name</th>
                                                                <th>Total Bill</th>
                                                                <th>Value discount</th>
                                                                <th>The net</th>
                                                                <th>Paid up</th>
                                                                <th>The rest</th>
                                                              

                                                            </tr>
                                                        </thead>
                                                
                                                        <tbody id="tableItem">
                                                            
	                                                        @foreach (Bill item in Model )
                                                                {
	                                                                <tr>

		                                                                <td>@item.Id     </td >
                                                                        <td>@item.BillDate     </td >
		                                                                <td>@item.client.Name </td >
                                                                        <td>@item.BillsTotal    </td >
                                                                        <td>@item.ValueDiscount    </td >
                                                                        <td>@item.TheNet     </td >
                                                                        <td>@item.PaidUp    </td >
                                                                        <td>@item.TheRest     </td >
                                                                    </tr>
                                                              
                                                                }
                                                        </tbody>
                                         
                                                       
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    
                    
                   
